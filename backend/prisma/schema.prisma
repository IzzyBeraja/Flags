generator client {
  provider = "prisma-client-js"
  log      = "(array)"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL_DEV")
  relationMode = "prisma"
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt
  Killswitch Killswitch[]
}

model Killswitch {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      Boolean
  userId      String
  createdBy   User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@unique([name, userId], map: "killswitch_name_userId_unique")
  @@index([userId])
}
